<main>
	<%- include('../partials/adminSidebar') %>

	<div id="main-wrapper">

		<!-- Header -->
		<div class="bg-white shadow-sm p-3 d-flex align-items-center">
			<span id="sidebar-toggler-btn" class="me-3">
				<i class="fas fa-bars"></i>
			</span>
			<h5 class="m-0 color-theme">Pending Donations</h5>
		</div>

		<!-- Table Card -->
		<div class="container my-4">

			<div class="p-4 bg-white rounded-3 shadow-sm border" style="max-height: 75vh; overflow: auto;">
				
				<table class="table table-hover align-middle">
					<thead class="table-light border-bottom">
						<tr>
							<th>#</th>
							<th>Donor Name</th>
							<th>Food Type</th>
							<th>Quantity</th>
							<th>Status</th>
							<th>Actions</th>
						</tr>
					</thead>

					<tbody>
						<% for (let i = 0; i < pendingDonations.length; i++) { %>
							<tr>
								<td><%= i + 1 %></td>

								<td class="fw-semibold">
									<%= pendingDonations[i].donor.firstName + " " + pendingDonations[i].donor.lastName %>
								</td>

								<td><%= pendingDonations[i].foodType %></td>

								<td><%= pendingDonations[i].quantity %></td>

								<td>
									<span class="badge px-3 py-2 bg-opacity-10 text-capitalize
										<%= pendingDonations[i].status === 'pending' ? 'bg-warning text-warning' : 
										   pendingDonations[i].status === 'accepted' ? 'bg-success text-success' : 
										   'bg-secondary text-secondary' %>">
										<%= pendingDonations[i].status %>
									</span>
								</td>

								<td>
									<a href="/admin/donation/view/<%= pendingDonations[i]._id %>" 
									   class="btn btn-sm btn-outline-primary rounded-pill px-3">
										View
									</a>
								</td>
							</tr>
						<% } %>
					</tbody>

				</table>

			</div>

		</div>

	</div>
</main>

<style>
	.table-hover tbody tr:hover {
		background-color: #f8f9fc !important;
	}
</style>
