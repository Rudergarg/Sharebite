<main>
	<%- include('../partials/adminSidebar') %>

	<div id="main-wrapper">

		<!-- Header -->
		<div class="bg-white shadow-sm p-3 d-flex align-items-center">
			<span id="sidebar-toggler-btn" class="me-3">
				<i class="fas fa-bars"></i>
			</span>
			<h5 class="m-0 color-theme">Dashboard</h5>
		</div>


		<!-- Stats Grid -->
		<div class="container my-4">
			<div class="row g-4">

				<!-- Card -->
				<div class="col-md-4 col-lg-3">
					<div class="p-4 rounded-3 shadow-sm stats-card bg-light border">
						<div class="d-flex align-items-center gap-3">
							<i class="fas fa-user-shield fs-2 text-primary"></i>
							<div>
								<div class="fs-3 fw-bold"><%= numAdmins %></div>
								<div class="text-muted">Admins</div>
							</div>
						</div>
					</div>
				</div>

				<!-- Card -->
				<div class="col-md-4 col-lg-3">
					<div class="p-4 rounded-3 shadow-sm stats-card bg-light border">
						<div class="d-flex align-items-center gap-3">
							<i class="fas fa-user fs-2 text-success"></i>
							<div>
								<div class="fs-3 fw-bold"><%= numDonors %></div>
								<div class="text-muted">Donors</div>
							</div>
						</div>
					</div>
				</div>

				<!-- Card -->
				<div class="col-md-4 col-lg-3">
					<div class="p-4 rounded-3 shadow-sm stats-card bg-light border">
						<div class="d-flex align-items-center gap-3">
							<i class="fas fa-users fs-2 text-primary"></i>
							<div>
								<div class="fs-3 fw-bold"><%= numAgents %></div>
								<div class="text-muted">Agents</div>
							</div>
						</div>
					</div>
				</div>

				<!-- Card -->
				<div class="col-md-4 col-lg-3">
					<div class="p-4 rounded-3 shadow-sm stats-card bg-light border">
						<div class="d-flex align-items-center gap-3">
							<i class="fas fa-hand-holding-heart fs-2 text-success"></i>
							<div>
								<div class="fs-3 fw-bold"><%= numPendingDonations %></div>
								<div class="text-muted">New Requests</div>
							</div>
						</div>
					</div>
				</div>

				<!-- Card -->
				<div class="col-md-4 col-lg-3">
					<div class="p-4 rounded-3 shadow-sm stats-card bg-light border">
						<div class="d-flex align-items-center gap-3">
							<i class="fas fa-tasks fs-2 text-warning"></i>
							<div>
								<div class="fs-3 fw-bold"><%= numAcceptedDonations %></div>
								<div class="text-muted">To Assign</div>
							</div>
						</div>
					</div>
				</div>

				<!-- Card -->
				<div class="col-md-4 col-lg-3">
					<div class="p-4 rounded-3 shadow-sm stats-card bg-light border">
						<div class="d-flex align-items-center gap-3">
							<i class="fas fa-clock fs-2 text-danger"></i>
							<div>
								<div class="fs-3 fw-bold"><%= numAssignedDonations %></div>
								<div class="text-muted">Not Collected</div>
							</div>
						</div>
					</div>
				</div>

				<!-- Card -->
				<div class="col-md-4 col-lg-3">
					<div class="p-4 rounded-3 shadow-sm stats-card bg-light border">
						<div class="d-flex align-items-center gap-3">
							<i class="fas fa-check-circle fs-2 text-success"></i>
							<div>
								<div class="fs-3 fw-bold"><%= numCollectedDonations %></div>
								<div class="text-muted">Collected</div>
							</div>
						</div>
					</div>
				</div>

			</div>
		</div>

	</div>
</main>

<style>
	.stats-card {
		transition: 0.2s;
		cursor: pointer;
	}
	.stats-card:hover {
		transform: translateY(-5px);
		box-shadow: 0 6px 20px rgba(0,0,0,0.1);
	}
</style>
