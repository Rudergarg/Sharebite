<main>
    <%- include('../partials/adminSidebar') %>

    <div id="main-wrapper">

        <!-- Page Header -->
        <div class="bg-white shadow-sm p-3 d-flex align-items-center">
            <span class="me-3" id="sidebar-toggler-btn"><i class="fas fa-bars"></i></span>
            <h5 class="m-0 color-theme">My Profile</h5>
        </div>

        <!-- Profile Form Card -->
        <div class="container my-4 d-flex justify-content-center">
            <form action="/admin/profile?_method=PUT"
                  method="POST"
                  class="bg-white shadow-sm rounded-4 p-4"
                  style="max-width: 650px; width: 100%;">

                <!-- Name Row -->
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold">First Name</label>
                        <input type="text"
                               name="admin[firstName]"
                               class="form-control"
                               value="<%= currentUser.firstName %>"
                               placeholder="Enter first name..."
                               required>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold">Last Name</label>
                        <input type="text"
                               name="admin[lastName]"
                               class="form-control"
                               value="<%= currentUser.lastName %>"
                               placeholder="Enter last name..."
                               required>
                    </div>
                </div>

                <!-- Email (Disabled) -->
                <div class="mb-3">
                    <label class="form-label fw-semibold">Email</label>
                    <input type="email"
                           class="form-control"
                           value="<%= currentUser.email %>"
                           disabled>
                </div>

                <!-- Gender -->
                <div class="mb-3">
                    <label class="form-label fw-semibold">Gender</label>
                    <div class="d-flex align-items-center gap-3 mt-1">
                        <div class="form-check">
                            <input class="form-check-input"
                                   type="radio"
                                   name="admin[gender]"
                                   value="male"
                                   id="male"
                                   <% if(currentUser.gender === 'male'){ %> checked <% } %> >
                            <label class="form-check-label" for="male">Male</label>
                        </div>

                        <div class="form-check">
                            <input class="form-check-input"
                                   type="radio"
                                   name="admin[gender]"
                                   value="female"
                                   id="female"
                                   <% if(currentUser.gender === 'female'){ %> checked <% } %> >
                            <label class="form-check-label" for="female">Female</label>
                        </div>
                    </div>
                </div>

                <!-- Address -->
                <div class="mb-3">
                    <label class="form-label fw-semibold">Address</label>
                    <input type="text"
                           name="admin[address]"
                           class="form-control"
                           value="<%= currentUser.address %>"
                           placeholder="Enter address...">
                </div>

                <!-- Phone -->
                <div class="mb-3">
                    <label class="form-label fw-semibold">Phone</label>
                    <input type="number"
                           name="admin[phone]"
                           class="form-control"
                           value="<%= currentUser.phone %>"
                           placeholder="Enter phone number...">
                </div>

                <!-- Submit -->
                <button type="submit"
                        class="btn btn-theme w-100 mt-3">
                    Update Profile
                </button>

            </form>
        </div>

    </div>
</main>
