<main class="bg-light min-vh-100">
	<%- include('../partials/agentSidebar') %>

	<div id="main-wrapper" class="p-3">

		<!-- Header -->
		<div class="bg-white shadow-sm p-3 rounded d-flex align-items-center mb-4">
			<span class="me-3" id="sidebar-toggler-btn">
				<i class="fas fa-bars fs-5"></i>
			</span>
			<h5 class="m-0 text-primary fw-bold">Dashboard</h5>
		</div>

		<!-- Stats Cards -->
		<div class="d-flex gap-4 flex-wrap m-3">

			<!-- Assigned Donations -->
			<div class="dashboard-card text-white rounded shadow-lg p-4" style="
				width: 300px;
				background: linear-gradient(135deg, #4e73df, #224abe);
			">
				<div class="d-flex align-items-center gap-3">
					<div class="fs-1"><i class="fas fa-clipboard-list"></i></div>
					<div>
						<div class="fs-1 fw-bold"><%= numAssignedDonations %></div>
						<div class="fs-6 text-light">Donations Not Collected Yet</div>
					</div>
				</div>
			</div>

			<!-- Collected Donations -->
			<div class="dashboard-card text-white rounded shadow-lg p-4" style="
				width: 300px;
				background: linear-gradient(135deg, #1cc88a, #13855c);
			">
				<div class="d-flex align-items-center gap-3">
					<div class="fs-1"><i class="fas fa-check-circle"></i></div>
					<div>
						<div class="fs-1 fw-bold"><%= numCollectedDonations %></div>
						<div class="fs-6 text-light">Donations Collected by You</div>
					</div>
				</div>
			</div>

		</div>

	</div>
</main>

<style>
	.dashboard-card {
		transition: transform 0.2s ease, box-shadow 0.2s ease;
		cursor: pointer;
	}

	.dashboard-card:hover {
		transform: translateY(-5px);
		box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
	}
</style>
