<main class="d-flex justify-content-center align-items-start"
      style="min-height: 100vh; background: #f5f7fa; padding-top: 40px;">

    <%- include('../partials/donorSidebar') %>

    <!-- Center Card -->
    <div id="main-wrapper" class="w-100 d-flex justify-content-center">

        <div class="bg-white shadow-lg rounded-4 p-4"
             style="width: 100%; max-width: 650px;">

            <!-- Header -->
            <div class="d-flex align-items-center justify-content-between mb-3">
                <h4 class="m-0 fw-bold">Donate Food</h4>
            </div>

            <!-- Form -->
            <form action="/donor/donate" method="POST">

                <!-- Food Name -->
                <div class="mb-3">
                    <label for="food" class="form-label fw-semibold">Food Name</label>
                    <input type="text" 
                           id="food"
                           name="donation[foodType]" 
                           class="form-control" 
                           placeholder="Enter food name..."
                           required autofocus>
                </div>

                <!-- Row 1 -->
                <div class="row">
                    <div class="col-sm-6 mb-3">
                        <label class="form-label fw-semibold">Quantity</label>
                        <input type="text" 
                               name="donation[quantity]" 
                               class="form-control" 
                               placeholder="Enter food quantity..."
                               required>
                    </div>

                    <div class="col-sm-6 mb-3">
                        <label class="form-label fw-semibold">Cooking Time</label>
                        <input type="datetime-local" 
                               id="time"
                               name="donation[cookingTime]" 
                               class="form-control" 
                               required>
                    </div>
                </div>

                <!-- Row 2 -->
                <div class="row">
                    <div class="col-sm-8 mb-3">
                        <label class="form-label fw-semibold">Collection Address</label>
                        <input type="text" 
                               name="donation[address]" 
                               class="form-control"
                               placeholder="Enter address..."
                               value="<%= currentUser.address %>"
                               required>
                    </div>

                    <div class="col-sm-4 mb-3">
                        <label class="form-label fw-semibold">Phone</label>
                        <input type="number" 
                               name="donation[phone]" 
                               class="form-control"
                               placeholder="Enter phone..."
                               value="<%= currentUser.phone %>"
                               required>
                    </div>
                </div>

                <!-- Message -->
                <div class="mb-3">
                    <label class="form-label fw-semibold">Message (Optional)</label>
                    <textarea class="form-control"
                              name="donation[donorToAdminMsg]"
                              placeholder="Write a message for admin or agent..."></textarea>
                </div>

                <!-- Submit Button -->
                <button type="submit" 
                        class="btn btn-primary w-100 mt-3 py-2 rounded-3 fw-semibold">
                    Submit Donation
                </button>

            </form>

        </div>
    </div>
</main>

<script>
    const d = new Date();
    const dateString = d.getFullYear() + "-" + ("0"+(d.getMonth()+1)).slice(-2) + "-" + 
                       ("0" + d.getDate()).slice(-2) + "T" + 
                       ("0" + d.getHours()).slice(-2) + ":" + 
                       ("0" + d.getMinutes()).slice(-2);
    document.getElementById("time").value = dateString;
</script>
