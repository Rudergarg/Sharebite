<main>
    <%- include('../partials/donorSidebar') %>

    <div id="main-wrapper">

        <!-- Header -->
        <div class="bg-white shadow-sm p-3">
            <span class="me-3" id="sidebar-toggler-btn">
                <i class="fas fa-bars"></i>
            </span>
            <h5 class="m-0 color-theme d-inline-block">Dashboard</h5>
        </div>

        <!-- Stats Cards -->
        <div class="d-flex gap-3 flex-wrap m-4 text-white">

            <!-- Total Donations -->
            <div class="rounded p-3 bg-success" style="width: 100%;">
                <div class="fs-1 fw-bold"><%= numCollectedDonations %></div>
                <div class="fs-5 text-capitalize">donations by you</div>
            </div>

            <!-- Pending Requests -->
            <div class="rounded p-3 bg-warning" style="width: 250px;">
                <div class="fs-1 fw-bold"><%= numPendingDonations %></div>
                <div class="fs-5">donation requests not processed yet</div>
            </div>

            <!-- Accepted Donations -->
            <div class="rounded p-3 bg-primary" style="width: 250px;">
                <div class="fs-1 fw-bold"><%= numAcceptedDonations %></div>
                <div class="fs-5">donations accepted and to be assigned to agent</div>
            </div>

            <!-- Assigned But Not Collected -->
            <div class="rounded p-3 bg-danger" style="width: 250px;">
                <div class="fs-1 fw-bold"><%= numAssignedDonations %></div>
                <div class="fs-5">donations not collected yet</div>
            </div>

        </div>

    </div>
</main>
